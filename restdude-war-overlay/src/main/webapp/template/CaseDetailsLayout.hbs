<div class="container-fluid">
    <h1 class="display-4">{{title}}
         <small><span class="badge badge-pill badge-default">{{ status.name }}</span></small>
    </h1>
</div>
<div class="container-fluid">
    <div class="row">

        <!-- main column -->
        <div class="col-md-9">

            <!-- description -->
            <h3 class="display-6">Description</h3>
            <hr />
            <div class="comment row">
                <div class="comment-avatar col-md-1 col-sm-2 text-xs-center p-r-1">
                    <a href=""><img class="m-x-auto img-circle img-fluid" src="http://demos.themes.guide/bodeo/assets/images/users/w102.jpg" alt="avatar" /></a>
                </div>
                <div class="comment-content col-md-11 col-sm-10">
                    <h6 class="small comment-meta">
                        <a href="#">{{createdBy.username}}</a> |
                        {{momentFromNow createdDate}} |
                        <span class="badge badge-pill badge-default">{{ status.name }}</span>
                    </h6>
                    <div class="comment-body">
                         {{{showdownToMarkup detail}}}
                    </div>
                </div>
            </div>
            <!-- /description -->
            <!-- comments -->
            <h3 class="display-6">Comments</h3>
            <hr />

            <div class="commentsRegion" id="comments">
            </div>
            <!-- new comment -->
            <div class="card">
                <div class="card-header">
                    <h3 class="display-6">Add comment</h3>
                </div>
                <div class="card-block newCommentRegion">
                    <form onsubmit="return false">
                        <div class="form-group row">
                          <!--label for="content" class="col-sm-2 col-form-label">Comment</label-->
                          <div class="col-sm-12">
                            <textarea class="form-control" id="content" placeholder="Type comment. Markdown is supported"></textarea>
                          </div>
                        </div>
                        <!--div class="form-group row">
                          <label for="assign" class="col-sm-2 col-form-label">Assign</label>
                          <div class="col-sm-12">
                            <select id="inputState" class="form-control">Choose</select>
                          </div>
                        </div-->
                        <!--div class="form-group">
                            <div class="form-check">
                              <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" readonly> Send notifications
                              </label>
                            </div>
                        </div-->
                        <div class="form-group row">
                          <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary">Submit</button> or <button type="submit" class="btn btn-danger">Submit and Close</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /new comment -->

        </div>
        <!-- /main column -->

        <!-- right side details column -->
        <div class="col-md-3">
            <h3 class="display-6">Details</h3>
            <hr />
            <table>
                <tr>
                    <th>Created:</th><td>{{momentDateTime createdDate}}</td>
                </tr>
                <tr>
                    <th>Created by:</th><td>{{createdBy.username}}</td>
                </tr>
                <tr>
                    <th>Updated:</th><td>{{momentDateTime lastModifiedDate}}</td>
                </tr>
                <tr>
                    <th>Updated by:</th><td>{{lastModifiedBy.username}}</td>
                </tr>
                <tr>
                    <th>Status:</th><td>{{status.name}}</td>
                </tr>
                <tr>
                    <th>Assignee:</th><td>None</td>
                </tr>
            </table>
        </div>
        <!-- /right side details column -->

    </div>
</div>
<div class="tmpl-hint">end CaseDetailsLayout.hbs</div>
